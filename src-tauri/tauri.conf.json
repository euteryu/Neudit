{
  "productName": "neudit-md",
  "version": "0.1.0",
  "identifier": "com.minse.neudit-md",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Neudit MD",
        "width": 1000,
        "height": 800,
        "decorations": false,
        "transparent": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"] 
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}